<div class="container">
    <h1 class="text-center mb-5 mt-5">Product Manager</h1>
    <div class="row d-flex justify-content-between">
        <div class="col-3">
            <h4 class="text-center">Products in Json</h4>
            <div id="products">
                {{#each products}}
                <div class="text-center">
                    <p class="products">
                        {{this.title}}
                    </p>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-3">
            <h4 class="text-center">Delete one Products in Json</h4>
            <form class="text-center d-flex flex-column">
                <label for="options">Choice a option:</label>
                <select id="options">
                    {{#each products}}
                    <option value={{this.id}}>{{this.title}}</option>
                    {{/each}}
                </select>
                <button type="button" onclick="captureValueId()">Delete product</button>
            </form>
        </div>
        <div class="col-3">
            <h4 class="text-center">Form for add new product</h4>
            <p id="message"></p>
            <form class="mb-3" id="formAddProduct" onsubmit="handlesubmit(event)">
                <label for="newProductName" class="form-label mb-3">New Product</label>
                <input type="text" class="form-control mb-2" id="newProductName" name="inputProductTitle"
                    placeholder="Insert new products name...">
                <input type="text" class="form-control mb-2" id="newProductDescription" name="inputProductDescription"
                    placeholder="Insert new products description...">
                <input type="text" class="form-control mb-2" id="newProductCode" name="inputProductCode"
                    placeholder="Insert new products code...">
                <input type="text" class="form-control mb-2" id="newProductPrice" name="inputProductPrice"
                    placeholder="Insert new products price...">
                <div class="mb-3 mt-3 border border-2 rounded">
                    <div>
                        <p class="text-center">Products status...</p>
                    </div>
                    <div class="d-flex flex-row justify-content-around">
                        <div><input checked type="radio" id="newProductStatusTrue" name="inputProductStatus"
                                value="true">
                            <label for="newProductPriceStatusTrue">True</label><br>
                        </div>
                        <div><input type="radio" id="newProductStatusFalse" name="inputProductStatus" value="false">
                            <label for="newProductPriceStatusFalse">False</label><br>
                        </div>
                    </div>
                </div>
                <input type="text" class="form-control mb-2" id="newProductStock" name="inputProductStock"
                    placeholder="Insert new products stock...">
                <input type="text" class="form-control mb-2" id="newProductCategory" name="inputProductCategory"
                    placeholder="Insert new products category...">
                <input type="file" name="inputFile"/>
                <input type="submit" class="btn btn-primary mt-3" value="Send"></input>
                
            </form>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>